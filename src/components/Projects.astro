<style>
  .image-loading {
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
  }

  .image-loaded {
    opacity: 1;
  }

  .project-card {
    transition: transform 0.3s ease-in-out;
  }

  .project-card:hover {
    transform: translateY(-15px);
  }

  .project-image {
    width: 85%;
    max-width: 500px; /* Ajustar el tamaño máximo de la imagen */
    height: auto;
    margin: 0 auto; /* Centrar la imagen */
  }
</style>

<section class="flex flex-col gap-y-16">
  {
    PROJECTS.map(
      ({ image, image2, title, description, tags, link, github }) => (
        <article class="project-card bg-transparent rounded-xl shadow-lg border border-violet-800 p-8">
          <h3 class="text-2xl font-semibold text-purple-400 mb-2">{title}</h3>
          <p class="text-white text-sm md:text-lg mb-4 text-pretty">
            {description}
          </p>
          <ul class="flex flex-wrap gap-x-2 mb-4">
            {tags.map((tag) => (
              <li class="mb-2">
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-3`}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>

          <img
            class="project-image rounded-xl shadow-2xl shadow-purple-900 mb-6 image-loading"
            src={image}
            alt={`Captura de pantalla del proyecto ${title}`}
            onload="this.classList.add('image-loaded')"
          />
          {image2 && (
            <img
              class="project-image rounded-xl shadow-2xl shadow-purple-900 mb-6 image-loading"
              src={image2}
              alt={`Captura de pantalla adicional del proyecto ${title}`}
              onload="this.classList.add('image-loaded')"
            />
          )}
          <footer class="flex gap-x-4 items-end justify-start mt-4">
            {github && (
              <LinkButton class="text-white" href={github} target="_blank">
                <GitHubIcon class="size-4 md:size-6 text-white" />
                <span class="text-white">Ver código</span>
              </LinkButton>
            )}
            {link && (
              <LinkButton class="text-white" href={link} target="_blank">
                <LinkIcon class="size-4 md:size-6 text-white" />
                <span class="text-white">Ir al sitio</span>
              </LinkButton>
            )}
          </footer>
        </article>
      )
    )
  }
</section>
