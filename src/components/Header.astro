---
import CVIcon from "../components/Icons/CV.astro";
---

<header
  class="flex justify-center items-center
  mx-auto
  py-5
  sticky top-0
  w-full xl:w-[1120px]
  z-10"
>
  <nav
    class="border border-black rounded-xl
  px-3 py-1
  flex flex-row items-center
  bg-gradient-to-r from-violet-700 to-black dark:from-black/50 dark:to-black
  backdrop-blur-2xl
  space-x-2 sm:space-x-4 md:space-x-6 lg:space-x-8
  overflow-x-auto"
  >
    <a
      href="/#experiencia"
      class="hover:bg-black/30 rounded-full px-2 py-1 transition
      text-white text-xs lg:text-lg"
      >Experiencia</a
    >
    <a
      href="/#proyectos"
      class="hover:bg-black/30 rounded-full px-2 py-1 transition
      text-white text-xs lg:text-lg"
      >Proyectos</a
    >
    <a
      href="/#sobre-mi"
      class="hover:bg-black/30 rounded-full px-2 py-1 transition
      text-white text-xs lg:text-lg"
      >Sobre mi</a
    >
    <a
      href="https://drive.google.com/uc?export=download&id=14PTNUN56Z6pSkno37mYfmPOZcW-v7lmb"
      class="hover:bg-white/20 rounded-full px-1 py-1 transition flex items-center"
      download="CV_NeftaliArturoHernandezVergara"
    >
      <CVIcon class="size-3 lg:size-6" />
      <span class="ml-1  text-white text-xs lg:text-lg">Descargar CV</span>
    </a>
  </nav>
</header>
