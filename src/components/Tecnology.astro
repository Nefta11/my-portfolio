---
import SlimIcon from "./Icons/SlimIcon.astro"
import HtmlIcon from "./Icons/HtmlIcon.astro"
import IconoDeCss from "./Icons/IconoDeCss.astro"
import JavaScriptIcon from "./Icons/JavaScriptIcon.astro"
import ReactIcon from "./Icons/ReactIcon.astro"
import AstroIcon from "./Icons/AstroIcon.astro"
import LaravelIcon from "./Icons/LaravelIcon.astro"
import MysqlIcon from "./Icons/MysqlIcon.astro"
import MongoDBIcon from "./Icons/MongoDBIcon.astro"

---


<div class="grid grid-cols-2 gap-4 text-white">
    <div class="bg-transparent p-6 border border-gray-700 rounded-lg">
        <h3 class="text-2xl font-semibold mb-4">Frontend</h3>
        <div class="grid grid-cols-3 gap-4">
            <div class="flex flex-col items-center">
                <HtmlIcon class="w-12 h-12 mb-2" />
                <span>HTML</span>
            </div>
            <div class="flex flex-col items-center">
                <IconoDeCss class="w-12 h-12 mb-2" />
                <span>CSS</span>
            </div>
            <div class="flex flex-col items-center">
                <JavaScriptIcon  class="w-12 h-12 mb-2" />
                <span>JavaScript</span>
            </div>
            <div class="flex flex-col items-center">
              <ReactIcon class="w-12 h-12 mb-2" />
              <span>React-Native</span>
          </div>
          <div class="flex flex-col items-center">
            <img src="https://raw.githubusercontent.com/tandpfun/skill-icons/65dea6c4eaca7da319e552c09f4cf5a9a8dab2c8/icons/React-Light.svg" alt="React" class="w-12 h-12 mb-2" />
            <span>React</span>
        </div>
        <div class="flex flex-col items-center">
          <AstroIcon class="w-12 h-12 mb-2" />
          <span>Astro</span>
      </div>
        </div>
    </div>

    <div class="bg-transparent p-6 border border-gray-700 rounded-lg">
        <h3 class="text-2xl font-semibold mb-4">Backend</h3>
        <div class="grid grid-cols-3 gap-4">
            <div class="flex flex-col items-center">
                <SlimIcon class="w-12 h-12 mb-2" />
                <span>SlimPHP</span>
            </div>
            <div class="flex flex-col items-center">
                <img src="https://raw.githubusercontent.com/tandpfun/skill-icons/65dea6c4eaca7da319e552c09f4cf5a9a8dab2c8/icons/ExpressJS-Dark.svg" alt="Node.js" class="w-12 h-12 mb-2" />
                <span>Express</span>
            </div>
            <div class="flex flex-col items-center">
                <LaravelIcon class="w-12 h-12 mb-2" />
                <span>Laravel</span>
            </div>
            <div class="flex flex-col items-center">
              <MysqlIcon class="w-12 h-12 mb-2" />
              <span>Mysql</span>
          </div>
          <div class="flex flex-col items-center">
            <MongoDBIcon class="w-12 h-12 mb-2" />
            <span>Mongo DB</span>
        </div>
        </div>
    </div>

    <div class="bg-transparent p-6 border border-gray-700 rounded-lg">
        <h3 class="text-2xl font-semibold mb-4">Aprendiendo</h3>
        <div class="grid grid-cols-3 gap-4">
            <div class="flex flex-col items-center">
                <img src="/path/to/python-icon.svg" alt="Python" class="w-12 h-12 mb-2" />
                <span>Python</span>
            </div>
            <div class="flex flex-col items-center">
                <img src="/path/to/astro-icon.svg" alt="Astro" class="w-12 h-12 mb-2" />
                <span>Astro</span>
            </div>
            <div class="flex flex-col items-center">
                <img src="/path/to/docker-icon.svg" alt="Docker" class="w-12 h-12 mb-2" />
                <span>Docker</span>
            </div>
            <!-- Añade más tecnologías que estás aprendiendo aquí -->
        </div>
    </div>

    <div class="bg-transparent p-6 border border-gray-700 rounded-lg">
        <h3 class="text-2xl font-semibold mb-4">Herramientas</h3>
        <div class="grid grid-cols-3 gap-4">
            <div class="flex flex-col items-center">
                <img src="/path/to/git-icon.svg" alt="Git" class="w-12 h-12 mb-2" />
                <span>Git</span>
            </div>
            <div class="flex flex-col items-center">
                <img src="/path/to/github-icon.svg" alt="GitHub" class="w-12 h-12 mb-2" />
                <span>GitHub</span>
            </div>
            <div class="flex flex-col items-center">
                <img src="/path/to/terminal-icon.svg" alt="Terminal" class="w-12 h-12 mb-2" />
                <span>Terminal</span>
            </div>
            <!-- Añade más herramientas aquí -->
        </div>
    </div>
</div>
