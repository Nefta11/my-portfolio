---
const { href, target = "_self", rel = "noopener noreferrer", class: customClass = "" } = Astro.props;
---

<a 
  href={href}
  target={target} 
  rel={rel}
  class={`bg-white/5 
          border dark:border-white/10 border-gray-300
          rounded-full
          inline-flex justify-center items-center gap-x-2
          py-1 px-2 md:text-base
          transition
          hover:scale-100 hover:bg-white/10
          ${customClass}`}
>
  <slot></slot>
</a>
